        <class-cache class="com.netshelter.ifbrands.data.entity.IfbSurveyQuestionType"  usage="read-write" />
        <class-cache class="com.netshelter.ifbrands.data.entity.IfbSurveyQuestionTypeAnswer" usage="read-write" />

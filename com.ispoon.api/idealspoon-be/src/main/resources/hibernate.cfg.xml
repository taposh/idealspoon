        <mapping class="com.netshelter.ifbrands.data.entity.IfbSurveyResponse"/>
        <mapping class="com.netshelter.ifbrands.data.entity.IfbSurveyResponseLog" />


        <class-cache class="com.netshelter.ifbrands.data.entity.IfbAd"                  usage="read-write" />
        <class-cache class="com.netshelter.ifbrands.data.entity.IfbCampaign"            usage="read-write" />

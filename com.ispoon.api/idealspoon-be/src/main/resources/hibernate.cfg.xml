        <mapping class="com.netshelter.ifbrands.data.entity.IfbActionLog" />
        <mapping class="com.netshelter.ifbrands.data.entity.IfbAdType"/>
        <mapping class="com.netshelter.ifbrands.data.entity.IfbCampaign"/>
        <mapping class="com.netshelter.ifbrands.data.entity.IfbCampaignStatus"/>
        <mapping class="com.netshelter.ifbrands.data.entity.IfbCampaignType"/>
        <mapping class="com.netshelter.ifbrands.data.entity.IfbTracking" />
        <mapping class="com.netshelter.ifbrands.data.entity.IfbFeed"/>

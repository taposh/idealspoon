<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		">

	<bean id="aws.credentials" class="com.amazonaws.auth.BasicAWSCredentials">
		<constructor-arg value="${netshelter.ifb.aws.accessKey}" />
		<constructor-arg value="${netshelter.ifb.aws.secretKey}" />
	</bean>

	<bean id="aws.s3.client" class="com.amazonaws.services.s3.AmazonS3Client">
		<constructor-arg ref="aws.credentials" />
	</bean>
	<bean id="aws.sqs.client" class="com.amazonaws.services.sqs.AmazonSQSClient">
		<constructor-arg ref="aws.credentials" />
	</bean>
	<bean id="aws.sns.client" class="com.amazonaws.services.sns.AmazonSNSClient">
		<constructor-arg ref="aws.credentials" />
	</bean>
</beans>
